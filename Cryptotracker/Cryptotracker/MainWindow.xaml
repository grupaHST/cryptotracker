<mahControl:MetroWindow x:Class="Cryptotracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mahControl="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Cryptotracker"
        mc:Ignorable="d"
        Height="450" Width="800" DataContext="{StaticResource AppViewModel}"
        Title="{Binding AppVersion, StringFormat=Cryptotracker v{0}}">
    <mahControl:MetroWindow.LeftWindowCommands>
        <mahControl:WindowCommands>
            <iconPacks:PackIconModern Width="22" Height="22" VerticalAlignment="Center" Kind="Money" />
        </mahControl:WindowCommands>
    </mahControl:MetroWindow.LeftWindowCommands>
    <mahControl:MetroWindow.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="welcome" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0:4"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </mahControl:MetroWindow.Triggers>
    <Grid>
        <StackPanel>
            <ComboBox ItemsSource="{Binding AvailableLanguages}" SelectedItem="{Binding Language}" SelectedValue="{Binding DefaultLanguageString}"/>
            <TextBlock x:Name="welcome" TextWrapping="Wrap" FontSize="72" HorizontalAlignment="Center"
                       Text="{Binding Language, Converter={StaticResource LanguageToAppMessageConverter}, ConverterParameter=Welcome}"/>
        </StackPanel>
    </Grid>
</mahControl:MetroWindow>
